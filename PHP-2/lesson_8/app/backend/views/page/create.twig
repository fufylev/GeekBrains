<form method="POST" class="w-50 m-auto">

    <div class="form-group">
        <label>Page title</label>
        <input type="text"
               name="Page[title]"
               value="{{ model.title }}"
               class="form-control"
               autocomplete="off"
               placeholder="Page title">
        <small class="form-text text-danger">
            {{ model.errors.title }}
        </small>
    </div>

    <div class="form-group">
        <label>Page content</label>
        <textarea
                name="Page[content]"
                class="form-control"
                autocomplete="off"
                rows="6"
                placeholder="Page content">{{ model.content }}</textarea>
        <small class="form-text text-danger">
            {{ model.errors.content }}
        </small>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary mb-2">Save page</button>
    </div>
</form>